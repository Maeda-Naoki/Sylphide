root = true

# General config
[*]
charset = utf-8
indent_style = tab
tab_width = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
indent_style = space
indent_size = 4

[*.json]
indent_size = 2
indent_style = space

[*.toml]
indent_size = 2
indent_style = space

[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = false

[Dockerfile]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = false
